{
  "info": {
    "name": "Geriatric Home Care System",
    "description": "Complete API collection for geriatric patient care management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{baseUrl}}"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.id) {",
                  "        pm.environment.set('userId', response.id);",
                  "    }",
                  "    pm.test('User registered successfully', () => {",
                  "        pm.expect(response).to.have.property('id');",
                  "        pm.expect(response).to.have.property('username');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"SecurePass123!\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"role\": \"PHYSICIAN\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('token', response.token);",
                  "    }",
                  "    if (response.id) {",
                  "        pm.environment.set('userId', response.id);",
                  "    }",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(response).to.have.property('token');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"SecurePass123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Check Email Availability",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/check-email?email=test@example.com",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "check-email"],
              "query": [
                {
                  "key": "email",
                  "value": "test@example.com"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Patient Management",
      "item": [
        {
          "name": "Create Patient",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.id) {",
                  "        pm.environment.set('patientId', response.id);",
                  "    }",
                  "    pm.test('Patient created successfully', () => {",
                  "        pm.expect(response).to.have.property('id');",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Margaret\",\n  \"lastName\": \"Thompson\",\n  \"dateOfBirth\": \"1942-03-15\",\n  \"medicalConditions\": \"Hypertension, Type 2 Diabetes\",\n  \"emergencyContact\": \"Sarah Thompson\",\n  \"emergencyPhone\": \"+1-555-0124\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/patients",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients"]
            }
          }
        },
        {
          "name": "Get Patient by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/patients/{{patientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", "{{patientId}}"]
            }
          }
        },
        {
          "name": "List All Patients",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/patients?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Update Patient",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Margaret\",\n  \"lastName\": \"Thompson-Smith\",\n  \"dateOfBirth\": \"1942-03-15\",\n  \"medicalConditions\": \"Hypertension, Type 2 Diabetes, Arthritis\",\n  \"emergencyContact\": \"Sarah Thompson\",\n  \"emergencyPhone\": \"+1-555-0124\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/patients/{{patientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", "{{patientId}}"]
            }
          }
        },
        {
          "name": "Delete Patient",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/patients/{{patientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "patients", "{{patientId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Care Plan Management",
      "item": [
        {
          "name": "Create Care Plan",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.id) {",
                  "        pm.environment.set('carePlanId', response.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"{{patientId}}\",\n  \"title\": \"Daily Care Plan\",\n  \"description\": \"Comprehensive daily care routine\",\n  \"startDate\": \"2026-02-15\",\n  \"priority\": \"MEDIUM\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/care-plans",
              "host": ["{{baseUrl}}"],
              "path": ["api", "care-plans"]
            }
          }
        },
        {
          "name": "Get Care Plan by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/care-plans/{{carePlanId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "care-plans", "{{carePlanId}}"]
            }
          }
        },
        {
          "name": "List Care Plans",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/care-plans?page=0&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "care-plans"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Update Care Plan",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"{{patientId}}\",\n  \"title\": \"Updated Daily Care Plan\",\n  \"description\": \"Modified care routine\",\n  \"startDate\": \"2026-02-15\",\n  \"priority\": \"HIGH\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/care-plans/{{carePlanId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "care-plans", "{{carePlanId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Alert Management",
      "item": [
        {
          "name": "Get Patient Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts/patient/{{patientId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts", "patient", "{{patientId}}"]
            }
          }
        },
        {
          "name": "Get Active Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts/patient/{{patientId}}/active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts", "patient", "{{patientId}}", "active"]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard & Reports",
      "item": [
        {
          "name": "Get Dashboard Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/dashboard/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "dashboard", "statistics"]
            }
          }
        }
      ]
    }
  ]
}
